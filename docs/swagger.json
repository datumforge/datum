                "expires_in": {
                    "type": "integer"
                },
                "message": {
                    "type": "string"
                },
                "refresh_token": {
                    "type": "string"
                },
                "reply": {
                    "$ref": "#/definitions/rout.Reply"
                },
                "token": {
                    "type": "string"
                },
