{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://datum.net/invoice-template.json",
    "title": "Invoice Template",
    "type": "object",
    "properties": {
        "number": {
            "description": "This is the invoice number, it should be unique and not changeable",
            "type": "string"
        },
        "issueDate": {
            "description": "This is the date the invoice was issued",
            "type": "string",
            "format": "date"
        },
        "saleDate": {
            "description": "This is the date the sale was made",
            "type": "string",
            "format": "date"
        },
        "dueDate": {
            "description": "This is the date the invoice is due",
            "type": "string",
            "format": "date"
        },
        "notes": {
            "description": "This is a note that can be added to the invoice",
            "type": "string"
        },
        "currency": {
            "description": "Ideally this is the ISO code and not something the user defines",
            "type": "string",
            "default": "USD"
        },
        "company": {
            "type": "object",
            "properties": {
                "buyer": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "address": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "name",
                        "address"
                    ]
                },
                "seller": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "address": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "name",
                        "address"
                    ]
                }
            },
            "required": [
                "buyer",
                "seller"
            ]
        },
        "items": {
            "description": "This is the list of items that are being invoiced",
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "description": {
                        "description": "This is the description of the item being invoiced",
                        "type": "string"
                    },
                    "quantity": {
                        "description": "This is the quantity of the item being invoiced",
                        "type": "number",
                        "exclusiveMinimum": 1
                    },
                    "unitPrice": {
                        "description": "This is the price of the item being invoiced",
                        "type": "number",
                        "exclusiveMinimum": 0,
                        "default": "0.00"
                    }
                },
                "required": [
                    "description",
                    "quantity",
                    "unitPrice"
                ]
            }
        }
    },
    "required": [
        "number",
        "issueDate",
        "saleDate",
        "dueDate",
        "currency",
        "company",
        "items"
    ]
}