                    "type": "HorizontalLayout",
                    "elements": [
                        {
                            "type": "Control",
                            "scope": "#/properties/number"
                        },
                        {
                            "type": "Control",
                            "scope": "#/properties/dueDate"
                        },
                        {
                            "type": "Control",
