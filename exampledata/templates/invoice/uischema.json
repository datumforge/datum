                                }
                            ]
                        },
                        {
                            "type": "Control",
                            "scope": "#/properties/Seller",
                            "label": "Seller",
                            "elements": [
                                {
                                    "type": "Control",
                                    "scope": "#/properties/name",
                                    "label": "Name"
                                },
                                {
                                    "type": "Control",
                                    "scope": "#/properties/address",
                                    "label": "Address"
